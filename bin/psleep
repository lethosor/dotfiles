#!/usr/bin/env python
import atexit
import math
import sys
import time

def set_title(title=''):
    sys.stdout.write('\033]0;%s\007' % title)
atexit.register(set_title)

def str_time(t):
    return '%02i:%02i:%02i' % (t / 3600, (t / 60) % 60, t % 60)

def display(msg):
    sys.stdout.write((' ' * 20) + '\r' + msg)
    sys.stdout.flush()
    set_title(msg)

t = int(sys.argv[1])
t_end = t + time.time()

msg = str_time(t)
display(msg)
while t > 0:
    time.sleep(0.5)
    old_msg = msg
    t = math.ceil(t_end - time.time())
    msg = str_time(t)
    if msg != old_msg:
        display(msg)

print('')
